<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/motback1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/videotitle"
        android:layout_width="507dp"
        android:layout_height="36dp"
        android:layout_marginStart="80dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/motback1"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/vView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videotitle" />

    <ProgressBar
        android:id="@+id/motprogressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videotitle" />

    <ImageView
        android:id="@+id/motfs1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/mute"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videotitle" />

    <TextView
        android:id="@+id/motcurrent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="0:00"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/playimg1"
        app:layout_constraintTop_toBottomOf="@id/motprogressBar1" />

    <TextView
        android:id="@+id/mottotal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="550dp"
        android:layout_marginTop="10dp"
        android:text="0:00"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/motcurrent1"
        app:layout_constraintTop_toBottomOf="@id/motprogressBar1" />

    <ImageView
        android:id="@+id/playimg1"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_play_arrow_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/motprogressBar1"
        app:layout_constraintLeft_toLeftOf="@id/motcurrent1" />
</androidx.constraintlayout.widget.ConstraintLayout>

