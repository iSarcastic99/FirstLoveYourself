<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="-50dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:focusableInTouchMode="true"
          android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/motback"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"/>

          <ImageView
              android:id="@+id/motimage1"
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:src="@drawable/captainamerica"
              android:layout_marginTop="-20dp"/>
          <TextView
              android:layout_width="match_parent"
              android:id="@+id/text1"
              android:layout_marginTop="-25dp"
              android:layout_height="match_parent"
              android:text="Steve Rogers - A Man Out Of Time"
              android:textColor="#000000"
              android:textSize="20sp"/>
          <ImageView
              android:id="@+id/motimage2"
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:src="@drawable/beinspired"
              android:layout_marginTop="-10dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="Be Inspired"
              android:layout_marginTop="-20dp"
              android:textColor="#000000"
              android:textSize="20sp"/>

          <ImageView
              android:id="@+id/motimage3"
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:src="@drawable/tedtalk"
              android:layout_marginTop="-10dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="How To Get Your Brain To Focus - Chris Bailey"
              android:textColor="#000000"
              android:layout_marginTop="-20dp"
              android:textSize="20sp"/>

          <ImageView
              android:id="@+id/motimage4"
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:src="@drawable/kungfupanda"
              android:layout_marginTop="10dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="Most Emotional And Inspiring Themes"
              android:textColor="#000000"
              android:layout_marginTop="-10dp"
              android:textSize="20sp"/>

          <ImageView
              android:id="@+id/motimage5"
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:src="@drawable/purposetonystark"
              android:layout_marginTop="-20dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="Tony Stark - Purpose"
              android:layout_marginTop="-30dp"
              android:textColor="#000000"
              android:textSize="20sp"/>

    </LinearLayout>
 </ScrollView>
