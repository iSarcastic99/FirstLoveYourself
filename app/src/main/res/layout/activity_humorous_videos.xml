<?xml version="1.0" encoding="utf-8"?>

 <ScrollView android:id="@+id/scrollView2"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginBottom="15dp"
     xmlns:android="http://schemas.android.com/apk/res/android">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:focusableInTouchMode="true"
      android:orientation="vertical">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/humback"
       android:src="@drawable/ic_keyboard_backspace_black_24dp"/>


   <ImageView
       android:id="@+id/humimage1"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:src="@drawable/russelpeters"
       android:layout_marginTop="-20dp"/>
   <TextView
       android:layout_width="match_parent"
       android:id="@+id/text1"
       android:layout_marginTop="-20dp"
       android:layout_height="match_parent"
       android:text="'Arabs' - Russell Peters - Red, White, and Brown"
       android:textColor="#000000"
       android:textSize="20sp"/>
   <ImageView
       android:id="@+id/humimage2"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:src="@drawable/bestofbagga"
       android:layout_marginTop="-20dp"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="Best Of Bagga"
       android:layout_marginTop="-30dp"
       android:textColor="#000000"
       android:textSize="20sp"/>

   <ImageView
       android:id="@+id/humimage3"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:src="@drawable/kotafactorychem"
       android:layout_marginTop="15dp"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="Kota Factory (Chemistry)"
       android:textColor="#000000"
       android:textSize="20sp"/>

   <ImageView
       android:id="@+id/humimage4"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:src="@drawable/truthofengg"
       android:layout_marginTop="10dp"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="The Truth Of Engineering - AIB"
       android:textColor="#000000"
       android:layout_marginTop="10dp"
       android:textSize="20sp"/>

   <ImageView
       android:id="@+id/humimage5"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:src="@drawable/zakirkhan"
       android:layout_marginTop="-20dp"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="Zakir Khan (Failure)"
       android:layout_marginTop="-20dp"
       android:textColor="#000000"
       android:textSize="20sp"/>

  </LinearLayout>
 </ScrollView>


